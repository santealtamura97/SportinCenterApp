<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SportingCenterApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- remove action bar from my application -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="Normal_Margin_Style" parent="AppTheme">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Font_family_regular" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="Font_family_light" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name = "TextAppareance">
        <item name = "android:textColor">@color/black</item>
    </style>

    <style name = "TextAppareance2">
        <item name = "android:textColor">@color/white</item>
    </style>

    <style name = "TextAppareance3">
        <item name = "android:textColor">@color/lightGray</item>
    </style>

    <style name = "TextAppareance4">
        <item name = "android:textColor">#B5B5B5</item>
    </style>

</resources>