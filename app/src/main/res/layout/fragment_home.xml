<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/logo_small_icon_only">

                </ImageView>

                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:gravity= "center"
                    android:textColor ="@color/primary_color"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/home_title">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/first_separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/primary_color">
            </LinearLayout>

            <ImageSwitcher
                android:id = "@+id/imageswitcher_home"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">
            </ImageSwitcher>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:background="@color/background_color">

                      <ImageButton
                           android:id="@+id/prev"
                           android:layout_width="50dp"
                           android:layout_height="30dp"
                           android:background="@color/primary_color"
                           android:layout_gravity="left"
                           android:src="@drawable/ic_baseline_navigate_before_24">
                      </ImageButton>


                      <ImageButton
                         android:id="@+id/next"
                         android:layout_width="50dp"
                         android:layout_height="30dp"
                         android:background="@color/primary_color"
                         android:layout_marginLeft="250dp"
                         android:src="@drawable/ic_baseline_navigate_next_24">

                     </ImageButton>

                   </LinearLayout>

            <TextView
                android:id="@+id/firststring_home"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:textSize="30dp"
                android:text="@string/first_title_home">
            </TextView>

            <TextView
                android:id="@+id/first_text_home"
                android:layout_width="350dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="@string/first_text_home">
            </TextView>

            <TextView
                android:id="@+id/secondstring_home"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/primary_color"
                android:textSize="30dp"
                android:text="@string/second_title_home">
            </TextView>

            <TextView
                android:id="@+id/second_text_home"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="@string/second_text_home">
            </TextView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>