<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_faq_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/primary_color">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="@string/faq_title"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="25dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_faq_text"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/primary_color"
                android:text="@string/faq_question_1"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/first_faq_body"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:text="@string/faq_respose_1"
                android:textSize="15dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/second_faq_text"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/primary_color"
                android:textSize="20dp"
                android:text="@string/faq_question_2"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/second_faq_body"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:text="@string/faq_respose_2"
                android:textSize="15dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/third_faq_text"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/primary_color"
                android:textSize="20dp"
                android:text="@string/faq_question_3"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/third_faq_body"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:text="@string/faq_respose_3"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>